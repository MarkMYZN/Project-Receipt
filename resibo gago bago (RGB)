void checkoutFunc() {
    system("cls");
    printf("You are in Checkout Area.\n");
    printf("Printing receipt....\nPlease wait...\n");
    checkoutCart();
    printf("\nThank you for shopping with us!\n");
    getchar();
}

void exitLobby() {
    int exitLob;
    scanf("%d", &exitLob);

    switch (exitLob) {
        case 8: // back to main displayfunc
            system("cls");
            displayMain();
            displayFunc();
        case 9: // checkout area
            checkoutFunc();
        case 0: // stays in area
            beverageFunc();
    } 
}

int main() {
    printf("Welcome to JOJO Store!\n");
    displayMain();
    displayFunc();
    return 0;
}
