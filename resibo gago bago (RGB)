#include <stdio.h>
#include <windows.h>
#include <time.h>

#define MAX_ITEMS 10

// beverage aisle array
    char sodaName[MAX_ITEMS][50]; 
    int sodaQuantity[MAX_ITEMS];
    float sodaPrice[MAX_ITEMS];
// cleaning aisle array
    char cleenName[MAX_ITEMS][50]; 
    int cleenQuantity[MAX_ITEMS];
    float cleenPrice[MAX_ITEMS];
// personal care aisle array
    char selfCareName[MAX_ITEMS][50]; 
    int selfCareQuantity[MAX_ITEMS];
    float selfCarePrice[MAX_ITEMS];
// breakfast aisle array
    char earlyMealName[MAX_ITEMS][50]; 
    int earlyMealQuantity[MAX_ITEMS];
    float earlyMealPrice[MAX_ITEMS];
// frozen aisle array
    char iceName[MAX_ITEMS][50]; 
    int iceQuantity[MAX_ITEMS];
    float icePrice[MAX_ITEMS];


void checkoutCart() {
    printf("=====================================================\n");
    printf("                     JOJO Store                   \n");
    printf("=====================================================\n");

    time_t t;
    time(&t);
    struct tm* localTime = localtime(&t);

    printf("Date: %02d/%02d/%04d %02d:%02d:%02d\n", localTime->tm_mday, localTime->tm_mon + 1, localTime->tm_year + 1900,
           localTime->tm_hour, localTime->tm_min, localTime->tm_sec);
    printf("Cashier: Jakol Salsalani\n");
    printf("=====================================================\n");


    printf("Items in the cart:\n");
    printf("%-15s %-10s %-10s\n", "Name", "Quantity", "Price");
    for (int i = 0; i < MAX_ITEMS; ++i) {
        printf("%-15s %-10d %-10.2f\n", sodaName[i], sodaQuantity[i], sodaPrice[i]);
        printf("%-15s %-10d %-10.2f\n", cleenName[i], cleenQuantity[i], cleenPrice[i]);
        printf("%-15s %-10d %-10.2f\n", selfCareName[i], selfCareQuantity[i], selfCarePrice[i]);
        printf("%-15s %-10d %-10.2f\n", earlyMealName[i], earlyMealQuantity[i], earlyMealPrice[i]);
        printf("%-15s %-10d %-10.2f\n", iceName[i], iceQuantity[i], icePrice[i]);
        
    }
    printf("=====================================================\n");
    printf("       Thank you for shopping at JOJO Store!         \n");
    printf("=====================================================\n");
}

//main User screen
void displayMain() {
    printf("Where would you like to go?\n");
    printf("(1) Beverage Aisle\n");
    printf("(2) Cleaning Supply Aisle\n");
    printf("(3) Personal Care Aisle\n");
    printf("(4) Breakfasts Aisle\n");
    printf("(5) Frozen Aisle\n");
}

void displayFunc() {
    int displayFunction;
    scanf("%d", &displayFunction);

    switch (displayFunction) {
        case 1: // beverage aisle
            system("cls");
            printf("You are in Beverage Aisle.\n");
            printf("Items in shelf:\n");
            beverage();
        case 2: // beverage aisle
            system("cls");
            printf("You are in Cleaning Supplies Aisle.\n");
            printf("Items in shelf:\n");
            cleaning();
        case 3: // beverage aisle
            system("cls");
            printf("You are in Personal Care Aisle.\n");
            printf("Items in shelf:\n");
            personal();
        case 4: // beverage aisle
            system("cls");
            printf("You are in Breakfasts Aisle.\n");
            printf("Items in shelf:\n");
            breakfast();
        case 5: // beverage aisle
            system("cls");
            printf("You are in Frozen Aisle.\n");
            printf("Items in shelf:\n");
            frozen();
    }
}

//Aisles
void beverage() {
    printf("(1) Bottled Water (24-pack)..........$3.99\n");
    printf("(2) Canned  (12-pack)..........$4.50\n");
    printf("(3) Coffee (Ground, 12 oz)..........$6.99\n");
    printf("(4) Fruit Juice (64 oz)..........$2.49\n");
    printf("(5) Iced Tea (Bottled, 16 oz)..........$1.79\n");
    beverageFunc();
}
void beverageFunc() {
    int bev;
    scanf("%d", &bev);

    switch (bev) {
        case 1: 
            system("cls");
            for (int i = 0; i < 1; ++i) {
                sprintf(sodaName[i], "Bottled Water (24-pack)", i + 1);
                sodaQuantity[i] = i + 1;
                sodaPrice[i] = 3.99 * (i + 1);
            }
            printf("Bottled Water (24-pack) Has been added to Cart.\n");
            printf("\nReady to head out?\n");
            printf("(8) Go back to lobby\n");
            printf("(9) Go to checkout\n");
            printf("Enter your choice: ");
            exitLobby();
            break;
        case 2:
            system("cls");
            for (int i = 1; i < 2; ++i) {
                sprintf(sodaName[i], "Canned  (12-pack)", i + 2);
                sodaQuantity[i] = i + 2;
